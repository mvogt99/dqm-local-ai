# DQM LOCAL AI - Environment Configuration
# Copy to .env and customize values

# ===================
# Database Configuration
# ===================
# Option 1: Use DATABASE_URL (takes priority)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Option 2: Individual parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=northwind
DB_USER=dqm_user
DB_PASSWORD=dqm_password
DB_TYPE=postgresql

# Connection Pool
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ===================
# Azure AD Authentication
# ===================
AZURE_AUTH_ENABLED=false
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_REDIRECT_URI=http://localhost:8001/auth/callback
AZURE_SCOPES=openid profile email

# ===================
# LOCAL AI Integration
# ===================
LOCAL_AI_ENABLED=true
RTX5090_ENDPOINT=http://localhost:8004
RTX3050_ENDPOINT=http://localhost:8015
